<!DOCTYPE html>
<html lang="{{ 'de-CH' if language == 'de' else 'en' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>CV - {{ profile.full_name }}</title>
  {% set font_css_map = {"inter": '"Inter", "Segoe UI", Arial, sans-serif', "roboto": '"Roboto", "Segoe UI", Arial, sans-serif', "lato": '"Lato", "Segoe UI", Arial, sans-serif', "georgia": 'Georgia, "Times New Roman", serif', "source_sans": '"Source Sans 3", "Segoe UI", Arial, sans-serif'} %}
  {% set font_import_map = {"inter": "https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap", "roboto": "https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap", "lato": "https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap", "source_sans": "https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600;700&display=swap"} %}
  {% set chosen_font = font_css_map.get(theme.font_family, font_css_map["inter"]) %}
  {% set chosen_import = font_import_map.get(theme.font_family, "") %}
  <style>
    {% if chosen_import %}@import url('{{ chosen_import }}');{% endif %}
    @page { size: A4; margin: 14mm 16mm; }
    :root {
      --primary: {{ theme.primary_hex }};
      --accent: {{ theme.accent_hex }};
      --ink: #1a1d23;
      --muted: #555d6e;
      --rule: {% if theme.border_style == 'none' %}transparent{% else %}#d4d9e3{% endif %};
      --page-bg: {{ theme.page_bg }};
    }
    * { box-sizing: border-box; }
    body { margin: 0; color: var(--ink); font-family: {{ chosen_font }}; font-size: 10.6px; line-height: 1.44; background: var(--page-bg); -webkit-font-smoothing: antialiased; -webkit-print-color-adjust: exact; print-color-adjust: exact; }
    h1, h2, h3, p { margin: 0; }

    /* Header */
    .header { overflow: hidden; padding-bottom: 10px; border-bottom: 2.5px solid var(--primary); margin-bottom: 12px; }
    .header-text { float: left; max-width: 70%; }
    .header-photo { float: right; }
    .name { font-size: 26px; line-height: 1.08; color: var(--primary); font-weight: 700; letter-spacing: -0.2px; }
    .headline { margin-top: 4px; color: var(--accent); font-size: 11.5px; font-weight: 600; }
    .contact-line { margin-top: 6px; color: var(--muted); font-size: 9.6px; line-height: 1.6; }
    .contact-sep { color: var(--rule); margin: 0 2px; }
    .photo { width: 100px; height: 100px; border-radius: {% if theme.border_style == 'rounded' %}8px{% else %}0{% endif %}; overflow: hidden; border: 1.5px solid var(--rule); }
    .photo img { width: 100%; height: 100%; object-fit: cover; display: block; }

    /* Sections */
    .section { margin-top: 13px; break-inside: avoid; page-break-inside: avoid; }
    .section-head { color: var(--primary); font-size: 11px; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 5px; padding-bottom: 3px; border-bottom: 1px solid var(--rule); }

    /* Summary */
    .summary { color: var(--ink); font-size: 10.8px; line-height: 1.5; }

    /* Skills */
    .skill-chip {
      display: inline-block;
      margin: 2px 4px 2px 0;
      padding: 2.5px 7px;
      border-radius: {% if theme.border_style == 'rounded' %}5px{% else %}1px{% endif %};
      background: {{ theme.primary_hex }}0D;
      border: 1px solid {{ theme.primary_hex }}26;
      color: var(--primary);
      font-size: 9.4px;
      font-weight: 600;
    }
    .skill-level { font-size: 7.8px; color: var(--muted); display: block; margin-top: 1px; font-weight: 400; }

    /* Experience */
    .entry { margin: 0 0 8px; break-inside: avoid; page-break-inside: avoid; }
    .entry h3 { font-size: 11px; font-weight: 700; color: var(--ink); }
    .entry-meta { color: var(--muted); font-size: 9.4px; margin-top: 1px; font-weight: 600; }
    .entry ul { margin: 3px 0 0 14px; padding: 0; }
    .entry li { margin: 2px 0; color: var(--muted); line-height: 1.4; }

    /* Education */
    .edu-entry { margin-bottom: 5px; }
    .edu-entry h3 { font-size: 10.6px; font-weight: 700; }
    .edu-meta { color: var(--muted); font-size: 9.2px; margin-top: 1px; }
  </style>
</head>
<body>
  <header class="header">
    <div class="header-text">
      <h1 class="name">{{ profile.full_name }}</h1>
      {% if profile.headline %}<p class="headline">{{ profile.headline }}</p>{% endif %}
      <p class="contact-line">
        {% if profile.location %}<span>{{ profile.location }}</span>{% endif %}
        {% if profile.email %}<span class="contact-sep">·</span><span>{{ profile.email }}</span>{% endif %}
        {% if profile.phone %}<span class="contact-sep">·</span><span>{{ profile.phone }}</span>{% endif %}
        {% if profile.linkedin %}<br><span>{{ profile.linkedin }}</span>{% endif %}
        {% if profile.portfolio %}<span class="contact-sep">·</span><span>{{ profile.portfolio }}</span>{% endif %}
      </p>
    </div>
    {% if profile.photo_data_url %}
      <div class="header-photo">
        <div class="photo"><img src="{{ profile.photo_data_url }}" alt=""></div>
      </div>
    {% endif %}
  </header>

  <section class="section">
    <h2 class="section-head">{{ "Profil" if language == "de" else "Profile" }}</h2>
    <p class="summary">{{ content.summary }}</p>
  </section>

  <section class="section">
    <h2 class="section-head">{{ "Kernkompetenzen" if language == "de" else "Core Skills" }}</h2>
    <div>
      {% for skill in content.skills %}
        {% set parts = skill.split(' (') %}
        {% if parts|length > 1 %}
          <span class="skill-chip">{{ parts[0] }}<small class="skill-level">{{ parts[1].rstrip(')') }}</small></span>
        {% else %}
          <span class="skill-chip">{{ skill }}</span>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  <section class="section">
    <h2 class="section-head">{{ "Berufserfahrung" if language == "de" else "Experience" }}</h2>
    {% for item in content.experience %}
      <article class="entry">
        <h3>{{ item.role }}{% if item.company %} · {{ item.company }}{% endif %}</h3>
        {% if item.period %}<p class="entry-meta">{{ item.period }}</p>{% endif %}
        {% if item.achievements %}
          <ul>
            {% for achievement in item.achievements %}
              <li>{{ achievement }}</li>
            {% endfor %}
          </ul>
        {% endif %}
      </article>
    {% endfor %}
  </section>

  <section class="section">
    <h2 class="section-head">{{ "Ausbildung" if language == "de" else "Education" }}</h2>
    {% for item in content.education %}
      <article class="edu-entry">
        <h3>{{ item.degree }}</h3>
        <p class="edu-meta">{% if item.school %}{{ item.school }}{% endif %}{% if item.period %} · {{ item.period }}{% endif %}</p>
      </article>
    {% endfor %}
  </section>
</body>
</html>
