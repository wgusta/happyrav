<!DOCTYPE html>
<html lang="{{ 'de-CH' if language == 'de' else 'en' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cover Letter - {{ profile.full_name }}</title>
  {% set font_css_map = {"inter": '"Inter", "Segoe UI", Arial, sans-serif', "roboto": '"Roboto", "Segoe UI", Arial, sans-serif', "lato": '"Lato", "Segoe UI", Arial, sans-serif', "georgia": 'Georgia, "Times New Roman", serif', "source_sans": '"Source Sans 3", "Segoe UI", Arial, sans-serif'} %}
  {% set font_import_map = {"inter": "https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap", "roboto": "https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap", "lato": "https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap", "source_sans": "https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600;700&display=swap"} %}
  {% set chosen_font = font_css_map.get(theme.font_family, font_css_map["inter"]) %}
  {% set chosen_import = font_import_map.get(theme.font_family, "") %}
  <style>
    {% if chosen_import %}@import url('{{ chosen_import }}');{% endif %}
    @page { size: A4; margin: 16mm 16mm; }
    :root { --primary: {{ theme.primary_hex }}; --accent: {{ theme.accent_hex }}; --ink: #18202a; --muted: #586375; --rule: {% if theme.border_style == 'none' %}transparent{% else %}#dbe3ef{% endif %}; --panel: {{ theme.card_bg }}; --radius: {% if theme.border_style == 'rounded' %}14px{% elif theme.border_style == 'square' %}0{% else %}0{% endif %}; --shadow: {% if theme.box_shadow %}0 2px 8px rgba(0,0,0,0.10){% else %}none{% endif %}; --page-bg: {{ theme.page_bg }}; }
    body { margin: 0; font-family: {{ chosen_font }}; color: var(--ink); line-height: 1.56; font-size: 12px; background: var(--page-bg); }
    .sheet { border: {% if theme.border_style != 'none' %}1px solid var(--rule){% else %}none{% endif %}; border-radius: var(--radius); overflow: hidden; box-shadow: var(--shadow); }
    .top { background: var(--panel); padding: 12px; border-bottom: {% if theme.border_style != 'none' %}1px solid var(--rule){% else %}none{% endif %}; }
    .top strong { color: var(--primary); font-size: 13px; display: block; }
    .top p { margin: 4px 0 0; color: var(--muted); font-size: 11px; }
    .body { padding: 12px; }
    .recipient { white-space: pre-line; }
    .meta { margin-top: 8px; text-align: right; color: var(--muted); font-size: 11px; }
    .subject { margin-top: 11px; color: var(--primary); font-size: 17px; font-weight: 700; }
    p { margin: 9px 0; }
    .signature { margin-top: 16px; }
    .signature-img { max-height: 60px; max-width: 200px; margin: 8px 0; }
  </style>
</head>
<body>
  <main class="sheet">
    <header class="top">
      <strong>{{ profile.full_name }}</strong>
      <p>
        {% if sender_street %}{{ sender_street }}{% endif %}
        {% if sender_plz_ort %}{% if sender_street %} · {% endif %}{{ sender_plz_ort }}{% endif %}
        {% if profile.phone %}{% if sender_street or sender_plz_ort %} · {% endif %}{{ profile.phone }}{% endif %}
        {% if profile.email %}{% if sender_street or sender_plz_ort or profile.phone %} · {% endif %}{{ profile.email }}{% endif %}
      </p>
    </header>
    <section class="body">
      <div class="recipient">
        <strong>{{ company_name }}</strong>
        {% if recipient_contact %}<br>{{ recipient_contact }}{% endif %}
        {% if recipient_street %}<br>{{ recipient_street }}{% endif %}
        {% if recipient_plz_ort %}<br>{{ recipient_plz_ort }}{% endif %}
      </div>
      <div class="meta">{{ cover_date or today }}</div>
      <h1 class="subject">{{ "Bewerbung als" if language == "de" else "Application for" }} {{ position_title }}</h1>
      <p>{{ content.cover_greeting }}</p>
      <p>{{ content.cover_opening }}</p>
      {% for paragraph in content.cover_body %}
        <p>{{ paragraph }}</p>
      {% endfor %}
      <p>{{ content.cover_closing }}</p>
      <div class="signature">
        <p>{{ "Freundliche Grüsse" if language == "de" else "Kind regards" }}</p>
        {% if signature_data_url %}
          <img src="{{ signature_data_url }}" class="signature-img" alt="Signature">
        {% endif %}
        <p><strong>{{ profile.full_name }}</strong></p>
      </div>
    </section>
  </main>
</body>
</html>
