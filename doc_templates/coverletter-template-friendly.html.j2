<!DOCTYPE html>
<html lang="{{ 'de-CH' if language == 'de' else 'en' }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cover Letter - {{ profile.full_name }}</title>
  {% set font_css_map = {"inter": '"Inter", "Segoe UI", Arial, sans-serif', "roboto": '"Roboto", "Segoe UI", Arial, sans-serif', "lato": '"Lato", "Segoe UI", Arial, sans-serif', "georgia": 'Georgia, "Times New Roman", serif', "source_sans": '"Source Sans 3", "Segoe UI", Arial, sans-serif'} %}
  {% set font_import_map = {"inter": "https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap", "roboto": "https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap", "lato": "https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap", "source_sans": "https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600;700&display=swap"} %}
  {% set chosen_font = font_css_map.get(theme.font_family, font_css_map["inter"]) %}
  {% set chosen_import = font_import_map.get(theme.font_family, "") %}
  <style>
    {% if chosen_import %}@import url('{{ chosen_import }}');{% endif %}
    @page { size: A4; margin: 18mm 16mm; }
    :root { --primary: {{ theme.primary_hex }}; --accent: {{ theme.accent_hex }}; --ink: #1a2029; --muted: #586374; --rule: {% if theme.border_style == 'none' %}transparent{% else %}#d7dfed{% endif %}; --panel: {{ theme.card_bg }}; --radius: {% if theme.border_style == 'rounded' %}10px{% elif theme.border_style == 'square' %}0{% else %}0{% endif %}; --shadow: {% if theme.box_shadow %}0 2px 8px rgba(0,0,0,0.07){% else %}none{% endif %}; --page-bg: {{ theme.page_bg }}; }
    * { box-sizing: border-box; }
    body { margin: 0; font-family: {{ chosen_font }}; color: var(--ink); line-height: 1.56; font-size: 11.5px; background: var(--page-bg); -webkit-font-smoothing: antialiased; -webkit-print-color-adjust: exact; print-color-adjust: exact; }

    .top { background: var(--panel); border: {% if theme.border_style != 'none' %}1px solid var(--rule){% else %}none{% endif %}; border-radius: var(--radius); padding: 12px 14px; margin-bottom: 14px; box-shadow: var(--shadow); }
    .top-name { color: var(--primary); font-size: 14px; font-weight: 700; }
    .top-details { color: var(--muted); font-size: 10.5px; margin-top: 3px; line-height: 1.6; }

    .recipient { line-height: 1.6; font-size: 11px; }
    .recipient strong { display: block; font-size: 11.5px; }
    .date-line { margin-top: 10px; text-align: right; color: var(--muted); font-size: 10.5px; }
    .subject { margin-top: 12px; color: var(--primary); font-size: 15.5px; font-weight: 700; line-height: 1.2; }
    p { margin: 10px 0; }
    .body-text { margin-top: 10px; }
    .signature { margin-top: 20px; }
    .signature-img { max-height: 55px; max-width: 180px; margin: 8px 0; display: block; }
    .signature-name { font-weight: 700; font-size: 12px; }
  </style>
</head>
<body>
  <main>
    <header class="top">
      <div class="top-name">{{ profile.full_name }}</div>
      <div class="top-details">
        {% if sender_street %}{{ sender_street }}{% endif %}
        {% if sender_plz_ort %}{% if sender_street %} · {% endif %}{{ sender_plz_ort }}{% endif %}
        {% if profile.phone %}<br>{{ profile.phone }}{% endif %}
        {% if profile.email %} · {{ profile.email }}{% endif %}
      </div>
    </header>

    <section>
      <div class="recipient">
        <strong>{{ company_name }}</strong>
        {% if recipient_contact %}{{ recipient_contact }}<br>{% endif %}
        {% if recipient_street %}{{ recipient_street }}<br>{% endif %}
        {% if recipient_plz_ort %}{{ recipient_plz_ort }}{% endif %}
      </div>

      <div class="date-line">{{ cover_date or today }}</div>

      <h1 class="subject">{{ "Bewerbung als" if language == "de" else "Application for" }} {{ position_title }}</h1>

      <div class="body-text">
        <p>{{ content.cover_greeting }},</p>
        <p>{{ content.cover_opening }}</p>
        {% for paragraph in content.cover_body %}
          <p>{{ paragraph }}</p>
        {% endfor %}
        <p>{{ content.cover_closing }}</p>
      </div>

      <div class="signature">
        <p>{{ "Freundliche Grüsse" if language == "de" else "Kind regards" }}</p>
        {% if signature_data_url %}
          <img src="{{ signature_data_url }}" class="signature-img" alt="Signature">
        {% endif %}
        <p class="signature-name">{{ profile.full_name }}</p>
      </div>
    </section>
  </main>
</body>
</html>
